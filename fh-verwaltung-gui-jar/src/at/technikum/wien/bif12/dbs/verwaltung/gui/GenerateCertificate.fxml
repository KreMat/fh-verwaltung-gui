				<TableColumn fx:id="lVColumn" prefWidth="200"
					text="Lehrveranstaltung" />
				<TableColumn fx:id="eCTSColumn" prefWidth="200" text="ECTS" />
				<TableColumn fx:id="gradeColumn" prefWidth="70" text="Note"
					xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" />
			</columns>
			<VBox.margin>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</VBox.margin>
		</TableView>
	</children>
</VBox>
